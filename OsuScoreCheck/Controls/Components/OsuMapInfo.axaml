		  <OsuMapInfo Title="Pipopipo -People People- feat. Nanahira"
					  Diff="[pipirupirupirupipirupi]"
					  Time="12:19"
					  Star="11.11"
				      PP="1900"
					  Result="SS"
					  Mods="HR SD DT HD FL SO EZ"
					  SimplifiedCategory="Ranked"
					  BackgroundImage=""/>

		  <!--MODS + LOVED + RESULT-->
		  <OsuMapInfo Title="Pipopipo -People People- feat. Nanahira"
				   Diff="[pipirupirupirupipirupi]"
				   Time="12:19"
				   Star="11.11"
				   PP="0"
				   Result="SS"
				   Mods="HR SD DT HD FL SO EZ"
				   SimplifiedCategory="Loved"
				   BackgroundImage=""/>

		  <!--PP + RESULT-->
		  <OsuMapInfo Title="Pipopipo -People People- feat. Nanahira"
					  Diff="[pipirupirupirupipirupi]"
					  Time="12:19"
					  Star="11.11"
				      PP="10"
					  Result="SS"
					  Mods=""
					  SimplifiedCategory="Ranked"
					  BackgroundImage=""/>
		  
		  <!--RESULT-->
		  <OsuMapInfo Title="Pipopipo -People People- feat. Nanahira"
					Diff="[pipirupirupirupipirupi]"
					Time="12:19"
					Star="11.11"
					PP="0" 
					Result="D"
					Mods=""
					SimplifiedCategory="Ranked"
					BackgroundImage=""/>
		  
		  <!--LOVED + RESULT-->
		  <OsuMapInfo Title="Pipopipo -People People- feat. Nanahira"
				   Diff="[pipirupirupirupipirupi]"
				   Time="12:19"
				   Star="11.11"
				   PP="0"
				   Result="SS"
				   Mods=""
				   SimplifiedCategory="Loved"
				   BackgroundImage=""/>

		  <!--NO RESULT-->
		  <OsuMapInfo Title="Pipopipo -People People- feat. Nanahira"
				   Diff="[pipirupirupirupipirupi]"
				   Time="12:19"
				   Star="11.11"
				   PP="0"
				   Result=""
				   Mods=""
				   SimplifiedCategory="Loved"
				   BackgroundImage=""/>
	  </StackPanel>
  </Design.PreviewWith>

  <Style Selector="OsuMapInfo">
    <!-- Set Defaults -->
    <Setter Property="Template">
      <ControlTemplate>
			  <Grid Width="660" Height="150">
				  <Border CornerRadius="8" ClipToBounds="True">
					  <images:DisposableAdvancedImage x:Name="AdvancedImage"
											 Source="{TemplateBinding BackgroundImage}"
											 Stretch="Fill"/>
				  </Border>
				  
				  <Border Padding="8">
					  <StackPanel HorizontalAlignment="Center"
							 Orientation="Horizontal"
							 Spacing="4">
						  
						  <!--name-->
						  <Border Width="400"
								  Background="{DynamicResource 1Black10}"
								  CornerRadius="8"
								  Padding="8"
								  x:Name="BeatmapLinkBorder"
								  Cursor="Hand">
							  <TextBlock FontSize="{DynamicResource Text24}"
										 TextWrapping="Wrap"
										 TextAlignment="Center"
										 VerticalAlignment="Center"
										 HorizontalAlignment="Stretch">
								  <Run Text="{TemplateBinding Title}"/>
								  <Run Text="{TemplateBinding Diff}"/>
							  </TextBlock>
						  </Border>  
						  
						  <!--Parametrs-->
						  <Border MinWidth="100"
								  Background="{DynamicResource 1Black10}"
								  CornerRadius="8"
								  Padding="16,8,16,8">
							  <StackPanel Spacing="8" VerticalAlignment="Center"
										  HorizontalAlignment="Center">


								  <!-- Вариант 1: MODS + PP + RESULT -->
								  <StackPanel VerticalAlignment="Top"
											  IsVisible="{TemplateBinding IsResultModsBorderVisible}">

									  <Grid ColumnDefinitions="Auto, *" >
										  <Svg Width="24" Height="24"
											   Path="\Assets\Svg\Components\PP.svg"
											   Grid.Column="0"/>
										  <TextBlock FontSize="{DynamicResource Text20}"
													 Text="{TemplateBinding PP}"
													 Margin="8,0,0,0"
													 HorizontalAlignment="Center"
													 VerticalAlignment="Center"
													 Grid.Column="1"/>
									  </Grid>

									  <Border CornerRadius="8"
										 Height="2"
										 HorizontalAlignment="Stretch"
										 Background="{DynamicResource 1Pink}"/>

								  </StackPanel>

								  <!-- Вариант 2: LOVED + RESULT + MODS -->
								  <StackPanel IsVisible="{TemplateBinding IsLovedResultModsVisible}" VerticalAlignment="Top">

									  <TextBlock Grid.Column="2"
										 FontSize="{DynamicResource Text24}"
										 Text="{TemplateBinding Result}"/>

									  <Border CornerRadius="8"
										 Height="2"
										 HorizontalAlignment="Stretch"
										 Background="{DynamicResource 1Pink}"/>

								  </StackPanel>
								  
								  <!-- Вариант 3: PP + RESULT -->
								  <StackPanel VerticalAlignment="Top" Spacing="1" 
											  IsVisible="{TemplateBinding IsPointsBorderVisible}">

									  <Grid ColumnDefinitions="Auto,auto,auto" 
											HorizontalAlignment="Right">
										  <TextBlock FontSize="{DynamicResource Text20}"
													 HorizontalAlignment="Center"
													 VerticalAlignment="Center"
													 Text="{TemplateBinding PP}"
													 Grid.Column="0"/>
										  <Svg Width="20" Height="20"
											   Path="\Assets\Svg\Components\PP.svg"
											   VerticalAlignment="Bottom"
											   Grid.Column="1"
											   Margin="0,0,8,0"/>
										  <TextBlock Grid.Column="2"
											 FontSize="{DynamicResource Text24}"
											 Text="{TemplateBinding Result}"
											 Margin="0,0,2,0"/>
									  </Grid>

									  <Border CornerRadius="8"
										 Height="2"
										 HorizontalAlignment="Stretch"
										 Background="{DynamicResource 1Pink}"/>

								  </StackPanel>

								  <!-- Вариант 4: LOVED + RESULT -->
								  <StackPanel IsVisible="{TemplateBinding IsLovedVisible}" VerticalAlignment="Top">

										  <TextBlock Grid.Column="2"
											 FontSize="{DynamicResource Text24}"
											 Text="{TemplateBinding Result}"/>

									  <Border CornerRadius="8"
										 Height="2"
										 HorizontalAlignment="Stretch"
										 Background="{DynamicResource 1Pink}"/>

								  </StackPanel>

								  <!-- Time Star -->
								  <StackPanel VerticalAlignment="Stretch" Spacing="8">
									  <Grid ColumnDefinitions="Auto, *">
										  <Svg Width="24" Height="24"
											   Path="\Assets\Svg\Components\Time.svg"
											   Grid.Column="0"/>
										  <TextBlock FontSize="{DynamicResource Text20}"
													 Text="{TemplateBinding Time}"
													 Margin="6,0,0,0"
													 HorizontalAlignment="Center"
													 VerticalAlignment="Center"
													 Grid.Column="1"/>
									  </Grid>

									  <Grid ColumnDefinitions="Auto, *">
										  <Svg Width="24" Height="24"
											   Path="\Assets\Svg\Components\Star.svg"
											   Grid.Column="0"/>
										  <TextBlock FontSize="20"
													 Text="{TemplateBinding Star}"
													 Margin="6,0,0,0"
													 HorizontalAlignment="Center"
													 VerticalAlignment="Center"
													 Grid.Column="1"/>
									  </Grid>
								  </StackPanel>

							  </StackPanel>
						  </Border>
						  
						  <!--Result and Mods-->
						  <Grid>
							  <Border MaxWidth="110"
							   Background="{DynamicResource 1Black10}"
							   VerticalAlignment="Stretch"
							   CornerRadius="8"
							   Padding="16,7,16,0"
							   IsVisible="{TemplateBinding IsResultModsBorderVisible}">
								  <Grid RowDefinitions="auto, auto, auto" VerticalAlignment="Stretch">
									  <TextBlock Grid.Row="0"
												 FontSize="{DynamicResource Text24}"
												 VerticalAlignment="Bottom"
												 Text="{TemplateBinding Result}"/>
									  <Border Grid.Row="1"
											  CornerRadius="8"
											  Height="2"
											  HorizontalAlignment="Stretch"
											  Background="{DynamicResource 1Pink}"/>
									  <TextBlock Grid.Row="2"
												 Width="{TemplateBinding ModsMaxWidth}"
												 FontSize="{DynamicResource Text20}"
												 TextWrapping="Wrap"
												 TextAlignment="Center"
												 Text="{TemplateBinding Mods}"/>
								  </Grid>
							  </Border>

							  <!--Loved-->
							  <Border MaxWidth="110"
									Background="{DynamicResource 1Black10}"
									VerticalAlignment="Stretch"
									CornerRadius="8"
									Padding="16,6,16,0"
									IsVisible="{TemplateBinding IsLovedResultModsVisible}">
								  <Grid VerticalAlignment="Stretch">
									  <TextBlock Grid.Row="2"
												 Width="{TemplateBinding ModsMaxWidth}"
												 FontSize="{DynamicResource Text20}"
												 TextWrapping="Wrap"
												 TextAlignment="Center"
												 Text="{TemplateBinding Mods}"/>
								  </Grid>
							  </Border>
						  </Grid>
 
					  </StackPanel>
				  </Border>
				  
			  </Grid>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
