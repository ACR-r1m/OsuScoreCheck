<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Design.PreviewWith>
    <Border Padding="20" Background="Gray">
      <CheckBox Classes="FilterElement" Content="FL" Background="AliceBlue"/>
    </Border>
  </Design.PreviewWith>

	<Style Selector="CheckBox.FilterElement">
		<Setter Property="CornerRadius" Value="16"/>
		<Setter Property="FontFamily" Value="{StaticResource Zen}"/>
		<Setter Property="FontSize" Value="{DynamicResource Text24}"/>
		<Setter Property="Foreground" Value="{DynamicResource 1Pink}"/>
		<Setter Property="Cursor" Value="Hand"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="CheckBox">
					<Border x:Name="PART_Border"
								Grid.ColumnSpan="2"
								Background="White"
								Padding="6,0,8,2"
								BorderBrush="{TemplateBinding BorderBrush}"
								BorderThickness="4"
								CornerRadius="8"
								MinHeight="40">
						<StackPanel Orientation="Horizontal" x:Name="RootGrid" >

							<Grid VerticalAlignment="Bottom" Height="30">
								<Border x:Name="NormalRectangle"
										BorderBrush="Gray"
										Background="{DynamicResource CheckBoxCheckBackgroundFillUnchecked}"
										BorderThickness="2"
										CornerRadius="{TemplateBinding CornerRadius}"
										UseLayoutRounding="False"
										Height="24"
										Width="24"/>

								<Viewbox UseLayoutRounding="False">
									<Panel>
										<Panel Height="16" Width="16" />
										<Path x:Name="CheckGlyph"
											  Opacity="0"
											  Fill="{DynamicResource CheckBoxCheckGlyphForegroundUnchecked}"
											  Stretch="Uniform"
											  VerticalAlignment="Center"
											  FlowDirection="LeftToRight" />
									</Panel>
								</Viewbox>
							</Grid>
							<ContentPresenter x:Name="PART_ContentPresenter"
											ContentTemplate="{TemplateBinding ContentTemplate}"
											Content="{TemplateBinding Content}"
											Margin="{TemplateBinding Padding}"
											RecognizesAccessKey="True"
											HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
											VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
											TextWrapping="Wrap"
											Grid.Column="1" />

						</StackPanel>
					</Border>
					
				</ControlTemplate>
			</Setter.Value>
		</Setter>
		<Style Selector="^:checked">
			
			<Style Selector="^ /template/ Border#NormalRectangle">
				<Setter Property="BorderBrush" Value="{DynamicResource 1Pink}" />
				<Setter Property="Background" Value="{DynamicResource 1Pink}" />
			</Style>

			<Style Selector="^ /template/ ContentPresenter#PART_ContentPresenter">
				<Setter Property="Foreground" Value="{DynamicResource 1Pink}" />
			</Style>
			
		</Style>

		<Style Selector="^:pointerover">
			
			<Style Selector="^ /template/ Border#PART_Border">
				<Setter Property="Background" Value="White" />
				<Setter Property="BorderBrush" Value="{DynamicResource CheckBoxBorderBrushUncheckedPointerOver}" />
			</Style>

			<Style Selector="^ /template/ Border#NormalRectangle">
				<Setter Property="Background" Value="{DynamicResource 1Pink}"/>
			</Style>
			
			<Style Selector="^ /template/ ContentPresenter#PART_ContentPresenter">
				<Setter Property="Foreground" Value="{DynamicResource 1Pink}" />
			</Style>
			
		</Style>	
	</Style>
	
	
	
</Styles>
