<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	
    <Design.PreviewWith>
		<Border Padding="20" Background="Gray" Width="150" Height="150">
			<ScrollViewer AllowAutoHide="False">
				<WrapPanel>
					<Border Width="100" Height="100"/>
					<Border Width="100" Height="100"/>
					<Border Width="100" Height="100"/>
				</WrapPanel>
			</ScrollViewer>
        </Border>
    </Design.PreviewWith>

	<Style Selector="ScrollViewer">
		<Style Selector="^ ScrollBar">
			<Style Selector="^:vertical">
				<Style Selector="^ /template/ Border#VerticalRoot">
					<Setter Property="Background" Value="{DynamicResource 1Black}"/>
					<Setter Property="CornerRadius" Value="8"/>
				</Style>
				<Style Selector="^ /template/ Rectangle#TrackRect">
					<Setter Property="Fill" Value="Transparent"/>
				</Style>
			</Style>
			<Style Selector="^ Thumb">
				<Setter Property="MinWidth" Value="20"/>
				<Setter Property="Template">
					<ControlTemplate>
						<Border Background="White" CornerRadius="8" />
					</ControlTemplate>
				</Setter>
				<Style Selector="^:pointerover /template/ Border">
					<Setter Property="Background" Value="{DynamicResource 1WhitePointer}"/>
				</Style>
				<Style Selector="^:pressed /template/ Border">
					<Setter Property="Background" Value="{DynamicResource 1WhitePointer}"/>
				</Style>
			</Style>
			<Style Selector="^ RepeatButton">
				<Setter Property="IsVisible" Value="False"/>
			</Style>
		</Style>
	</Style>
	
	
</Styles>
