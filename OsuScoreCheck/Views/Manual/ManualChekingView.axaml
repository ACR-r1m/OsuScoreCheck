<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="700"
             x:Class="OsuScoreCheck.Views.ManualChekingView"
			 Background="{DynamicResource 1Pink}"
			 x:DataType="ManualChekingViewModel">

	<Grid VerticalAlignment="Stretch"
      HorizontalAlignment="Stretch"
      RowDefinitions="Auto,*,Auto"
      Margin="8">

		<Border Classes.LoadingUp="{Binding !IsLoadingStatus}"
				Classes.LoadingDown="{Binding IsLoadingStatus}"
				Grid.Row="0">
			<Grid>
				<TextBlock Text="{Localize VerificationApi}" IsVisible="{Binding ApiCheck}" />
				<TextBlock Text="{Localize VerificationNoApi}" IsVisible="{Binding !ApiCheck}" />
			</Grid>
		</Border>

		<Border Grid.Row="1"/>

		<Border Grid.Row="2" Padding="16">
			<StackPanel Orientation="Horizontal" Spacing="16" HorizontalAlignment="Center">
				<Button Classes="Default"
						Content="{Localize Back}"
						Command="{Binding NavigateCommand}"
						CommandParameter="{x:Type Manual3ViewModel}" />
				<Button Classes="Default"
						Content="{Localize Help}"/>
			</StackPanel>
		</Border>
	</Grid>
</UserControl>
